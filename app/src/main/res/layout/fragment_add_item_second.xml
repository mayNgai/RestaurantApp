<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGray">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout2"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/White"
        android:orientation="vertical">
        <!---->
        <LinearLayout
            android:id="@+id/linear_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextViewStyleฺold"
                android:padding="5dp"
                android:text="รายละเอียดสินค้า"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="ชื่อสินค้า"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/bg_input_group_single">
                <EditText
                    android:id="@+id/edt_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text"
                    android:background="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="หมวดหมู่"/>
            <LinearLayout
                android:id="@+id/linear_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_group_single"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="1dp">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="ราคา"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/bg_input_group_single">
                <EditText
                    android:id="@+id/edt_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
        <!---->

        <LinearLayout
            android:id="@+id/linear_product_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="ชื่อหมวดหมู่"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/bg_input_group_single">
                <EditText
                    android:id="@+id/edt_product_type_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
        <!---->

        <LinearLayout
            android:id="@+id/linear_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="ชื่อ"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/bg_input_group_single">
                <EditText
                    android:id="@+id/edt_discount_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text"
                    android:background="@null"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="มูลค่า"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_group_single"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <EditText
                        android:id="@+id/edt_percent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="number"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:theme="@style/MyTextView"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="5dp"
                        android:text="%"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!---->

        <LinearLayout
            android:id="@+id/linear_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextView"
                android:padding="5dp"
                android:text="จำนวนโต๊ะ"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/bg_input_group_single">
                <EditText
                    android:id="@+id/edt_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
        <!---->
        <LinearLayout
            android:id="@+id/linear_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="First name"
                    android:textSize="@dimen/font_20"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/DarkGray"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="Last name"
                    android:textSize="@dimen/font_20"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/DarkGray"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_phone_iphone_black_24dp"/>

                <EditText
                    android:id="@+id/edt_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="Tel"
                    android:textSize="@dimen/font_20"
                    android:inputType="phone"
                    android:layout_marginLeft="10dp"
                    android:maxLength="10"
                    android:textColorHint="@color/DarkGray"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_email_black_24dp"/>

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="E-mail"
                    android:textSize="@dimen/font_20"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/DarkGray"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutUsername"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_person_black_24dp"/>

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="Username"
                    android:textSize="@dimen/font_20"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/DarkGray"
                    android:enabled="false"/>

            </LinearLayout>
        </LinearLayout>
        <!---->

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="135dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="invisible"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_save_white_24dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/color_dark_yellow"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_delete_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="12dp"
        app:backgroundTint="@color/red"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/ic_add_white_24dp"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/ic_save_white_24dp"
        android:visibility="visible"/>

</RelativeLayout>